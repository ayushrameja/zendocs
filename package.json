{
  "name": "zendocs",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "desktop:dev": "turbo run desktop:dev --filter=desktop",
    "desktop:build": "turbo run desktop:build --filter=desktop"
  },
  "devDependencies": {
    "prettier": "^3.5.0",
    "turbo": "^2.4.3",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
